ctrl-checkbox()
  width: 18px
  height: 18px
  background-position: center
  background-repeat: no-repeat
  background-size: contain

ctrl-checkbox-on()
  background-image: url("./checkbox-checked.svg")

ctrl-checkbox-off()
  background-image: url("./checkbox.svg")
  ctrl-checkbox()

nowrap()
  overflow: hidden
  text-overflow: ellipsis
  white-space: nowrap

.w-letters
  &__empty
    padding: 1rem
    font-weight: 300

  &__loader
    padding: 1rem
    color: #666
    font-weight: 300
    text-align: center

  &-lst
    list-style: none
    display: block

  &-itm
    height: 35px
    display: block
    border-bottom: 1px solid #ccc
    font-size: 0
    position: relative
    font-weight: 300

    &:last-child
      border-bottom: none

    &__date
      position: absolute
      top: 50%
      right: 10px
      font-size: 1rem
      background-color: #999
      color: #fff
      border-radius: 5px
      padding: 0 .6rem
      height: 24px
      margin-top: -(@height / 2)
      text-align: center

    &:hover
    &_selected
      background-color: #ebebeb

    &_selected ^[0]-choose::after
      ctrl-checkbox-on()

  &-choose
    width: 50px
    height: 100%
    line-height: 35px
    font-size: 1rem
    display: inline-block
    vertical-align: top
    position: relative
    background: transparent

    &::after
      content: ""
      position: absolute
      top: 50%
      left: 50%

      ctrl-checkbox-off()

      margin-top: -(@height / 2)
      margin-left: -(@width / 2)

  &-desc
    width: calc(100% - 50px)
    font-size: 1rem
    height: 100%
    line-height: 35px
    display: inline-block
    vertical-align: top
    padding-right: (60/16)rem
    color: inherit
    text-decoration: none

    &__name
    &__subj
    &__msg
      display: inline-block
      vertical-align: middle

    &__name
      width: 140px
      font-weight: 500
      padding-right: 1rem

      nowrap()

    &__subj
      max-width: 210px

      nowrap()

    &__msg
      width: calc(100% - 450px) //210+100+90
      color: #999
      font-size: (11/16)rem

      nowrap()
