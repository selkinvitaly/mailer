.w-mailboxes
  display: block
  font-size: 1rem

  &-head
    margin-bottom: (10/16)rem

  &-write
    width: 100%
    height: 35px
    border-radius: 3px
    display: block
    line-height: (@height - 2px)
    padding: 0
    border: 1px solid #ccc
    background-color: #fff
    color: #333

    &:hover
      background-color: #ebebeb

    &__icn
      fill: currentColor
      display: inline-block
      vertical-align: middle
      width: 15px
      height: 15px
      margin-right: (5/16)rem

    &__txt
      vertical-align: middle
      font-weight: 300

  &-lst
    color: #333

  &-itm
    display: block
    position: relative
    border-radius: 3px
    font-weight: 300
    height: 25px
    line-height: @height
    margin-bottom: (5/16)rem
    color: inherit
    text-decoration: none

    &_active
    &:hover
      background-color: #ff6347
      color: #fff

    &__txt
      padding: 0 40px 0 10px

    &__cnt
      position: absolute
      top: 50%
      height: 18px
      padding: 0 5px
      margin-top: -(@height / 2)
      right: 5px
      background-color: #bb4934
      color: #fff
      border-radius: 3px
      line-height: 1
