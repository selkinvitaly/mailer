.letter-details
  display: block
  padding: 1rem

  &__loader
    color: #666
    font-weight: 300
    text-align: center

  &-head
    display: table
    width: 100%
    margin-bottom: 1rem

  &-ava
  &-author
  &-date
    display: table-cell
    vertical-align: middle

  &-ava
    width: 50px

  &-img
    width: 35px
    height: @width
    background-color: #f5f5f5
    border: 1px solid #ccc
    color: #999
    padding: (4/16)rem

    &__icn
      display: block
      width: 100%
      height: 100%
      fill: currentColor

  &-author
    &__mail
      color: #333
      font-weight: 300

      &:hover
        text-decoration: none

  &-date
    color: #333
    text-align: right

    &__time
      font-weight: 300
      display: inline

  &-body
    background-color: #f5f5f5
    color: #333
    padding: 1rem
