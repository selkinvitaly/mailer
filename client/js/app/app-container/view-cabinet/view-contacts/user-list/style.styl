.w-users
  &__more
    font-size: 1rem
    display: block
    margin: (10/16)rem auto
    width: 120px
    border-radius: 3px
    height: 35px
    line-height: (@height - 2px)
    font-weight: 500
    border: 1px solid #ccc
    background-color: #fff
    color: #333

    &:hover
      background-color: #ebebeb

    &:disabled
      opacity: .6
      cursor: default
      background-color: inherit !important

  &__loader
  &__empty
    padding: 1rem
    color: #666
    font-weight: 300
    text-align: center

  &-lst
    display: block
    list-style: none

  &-itm
    display: table
    text-decoration: none
    color: inherit
    cursor: pointer
    width: 100%

    &:hover
      background-color: #ebebeb

  &-ava
  &-about
  &-info
    display: table-cell
    vertical-align: middle

  &-ava
    width: 80px
    padding: (10/16)rem 0

    &__img
      width: 45px
      display: block
      border-radius: 50%
      height: 45px
      margin: 0 auto

  &-about
    font-weight: 300

    &__name
      font-size: 1.5rem
      color: #333
      margin-right: (5/16)rem

    &__email
      font-size: .9rem
      color: #666

  &-info
    text-align: right
    font-size: 0
    padding-right: 1rem
    width: 100px

  &-address
  &-bday
    display: inline-block
    font-size: 1rem
    vertical-align: middle
    width: 30px
    height: 30px
    background-color: #333
    color: #fff
    padding: 5px
    border-radius: 3px
    cursor: help
    margin-left: (5/16)rem

    &__icn
      display: block
      width: 100%
      height: 100%
      fill: currentColor
