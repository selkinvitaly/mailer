.w-notify
  position: fixed
  top: 5px
  right: 5px
  z-index: 99

  &-itm
    display: block
    cursor: pointer
    opacity: .8
    width: 300px
    height: 80px
    position: relative
    background-color: #383838
    color: #fff
    font-weight: 300
    padding: 1rem
    margin-bottom: .5rem

    &:hover
      opacity: 1

    &__icn
      position: absolute
      top: 7px
      right: 7px
      width: 10px
      height: 10px
      display: block
      fill: #fff
