.w-tabs
  &-lst
    display: block
    list-style: none
    font-weight: 300
    font-size: 0

  &-itm
    border: 1px solid transparent
    border-radius: 3px 3px 0 0
    font-weight: 500
    font-size: 1rem
    margin-right: (5/16)rem
    cursor: pointer
    display: inline-block
    vertical-align: top
    margin-bottom: -1px
    background-color: #fff
    border-bottom: 1px solid #ccc

    &:hover
      background-color: #ebebeb

    &__lnk
      color: inherit
      text-decoration: none
      cursor: inherit
      display: block
      height: 30px
      line-height: @height
      padding: 0 1.5rem

    &_active
      border-color: #ccc
      background-color: #fff
      cursor: default
      border-bottom-color: transparent

      &:hover
        background-color: #fff
